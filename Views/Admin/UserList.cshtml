@model IEnumerable<MovieApp.Models.Authentication.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<title>Personel Listesi</title>
<body>
    @* --KULLANICI TABLOSU-- *@
    <div class="content">
        <a style="float:left; font-size:inherit; color:#36b9bf;" href="/admin/signup">▹Kullanıcı Ekle</a>
        <div style="color:red; margin-right:10px; text-align:right;">@TempData["ErrorMsg"]</div>
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Personel ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Ad / Soyad</th>
                    <th>Eposta</th>
                    <th>Telefon</th>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr class="odd gradeX">
                        <td>@x.Id</td>
                        <td>@x.UserName</td>
                        <td>@x.NameSurname</td>
                        <td>@x.Email</td>
                        <td>@x.PhoneNumber</td>
                        <td>@Html.ActionLink("Rol Düzenle", "RoleAssign", new { id = x.Id }, new { @class = "btn btn-warning" })</td>
                        <td>@Html.ActionLink("Düzenle", "EditUser", new { id = x.Id }, new { @class = "btn btn-primary" })</td>
                        <td>@Html.ActionLink("Sil", "DeleteUser", new { id = x.Id }, new { @class = "btn btn-danger", onclick = "return confirm('U Y A R I   |   Kayıt silinmek üzere..');" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>



