@model MovieApp.Models.ViewModels.AppUserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <title>Bilgi Güncelle</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="text-align:center;">Bilgi Güncelle</h4>
                    </div>
                    <div class="modal-body">

                        @using (Html.BeginForm())
                        {
                            <b>Personel Id:</b>
                            @Html.TextBoxFor(x => x.Id, new { @readonly = true, @class = "form-control" })

                            <b>Ad Soyad:</b><br />
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NameSurname, "", new { @style = "color:red" })

                            <b>Kullanıcı Adı:</b><br />
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @style = "color:red" })

                            <b>E-Posta:</b><br />
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @style = "color:red" })

                            <b>Telefon Numarası:</b><br />
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @style = "color:red" })

                            <div class="modal-footer">
                                <button class="btn btn-primary">Güncelle</button>
                                <a href="/admin/userlist" class="btn btn-danger">İptal</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(function () {
        $('#myModal').modal({ backdrop: 'static', keyboard: false, show: true });
    });
</script>

